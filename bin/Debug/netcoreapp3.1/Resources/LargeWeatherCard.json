{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "speak": "Weather forecast for Monday is high of 62 and low of 42 degrees with a 20% chance of rain. Winds will be 5 mph from the northeast.",
  "backgroundImage": {
      "url": "https://adaptivecards.io/content/Mostly%20Cloudy-Background-Dark.jpg"
  },
  "body": [
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": 35,
                  "items": [
                      {
                          "type": "Image",
                          "url": "https://adaptivecards.io/content/Mostly%20Cloudy-Square.png",
                          "size": "Stretch"
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": 65,
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "Monday April 1",
                          "weight": "Bolder",
                          "size": "Large",
                          "color": "Light"
                      },
                      {
                          "type": "TextBlock",
                          "text": "63 / 42",
                          "size": "Medium",
                          "spacing": "None"
                      },
                      {
                          "type": "TextBlock",
                          "isSubtle": true,
                          "text": "20% chance of rain",
                          "spacing": "None"
                      },
                      {
                          "type": "TextBlock",
                          "isSubtle": true,
                          "text": "Winds 5 mph NE",
                          "spacing": "None"
                      }
                  ]
              }
          ]
      }
  ]
}